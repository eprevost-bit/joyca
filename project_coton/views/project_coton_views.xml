<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_edit_project_inherit_sales_purchases" model="ir.ui.view">
            <field name="name">project.project.form.inherit.sales.purchases</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='description']" position="replace"/>
                <xpath expr="//notebook" position="inside">
                    <page string="Presupuestos de Venta">
                        <field name="sale_order_ids" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="amount_total"/>
                                <field name="amount_paid"/>

                                <field name="aggregated_percentage_invoiced" widget="progressbar"/>
                                <field name="percentage_paid" widget="progressbar"/>
                            </list>
                        </field>
                    </page>
                    <page string="Ã“rdenes de Compra">
                        <field name="purchase_order_ids" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="amount_total" sum="Total Comprado"/>

                                <field name="aggregated_percentage_invoiced" widget="progressbar"/>
                                <field name="amount_paid" sum="Total Pagado"/>
                                <field name="percentage_paid" widget="progressbar"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
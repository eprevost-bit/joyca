<odoo>
    <data>
        <record id="view_order_form_custom_section" model="ir.ui.view">
            <field name="name">sale.order.form.custom.section</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="conecpt_sale"/>
                    <field name="project_id"/>
                    <field name="cantidad"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="attributes">
                    <attribute name="string">Cant. Unitaria</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="after">
                    <field name="x_numero_piezas" string="Cant. Total (Piezas)"/>
                </xpath>

                <xpath expr="//field[@name='note']" position="attributes">
                    <attribute name="string">Descripción para cliente</attribute>
                    <attribute name="placeholder">Descripción para cliente...</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//list[@editable]//field[@name='product_uom']"
                       position="replace"/>


                <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']"
                       position="replace">
                    <field name="price_unit" string="Precio Unitario"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
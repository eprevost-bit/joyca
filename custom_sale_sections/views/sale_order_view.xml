<odoo>
    <data>
        <record id="view_order_form_custom_section" model="ir.ui.view">
            <field name="name">sale.order.form.custom.section</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_quotation_send']" position="replace">

                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="conecpt_sale"/>
                    <field name="project_id"/>
                    <field name="cantidad"/>
                </xpath>
                <xpath expr="//field[@name='note']" position="attributes">
                    <attribute name="string">Descripción para cliente</attribute>
                    <attribute name="placeholder">Descripción para cliente...</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
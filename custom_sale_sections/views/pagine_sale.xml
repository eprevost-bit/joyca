<odoo>
    <record id="view_saleform_no_pager" model="ir.ui.view">
        <field name="name">account.move.form.no.pager</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="options">{'limit': 9999}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
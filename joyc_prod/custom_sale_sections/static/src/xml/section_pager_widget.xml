<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="custom_sale_sections.SectionPagerWidget" owl="1">
        <X2ManyField
            record="props.record"
            name="props.name"
            value="currentLines"
            readonly="props.readonly"
        />

        <div class="d-flex justify-content-center align-items-center mt-2" t-if="state.sections.length > 1">
            <button class="btn btn-secondary fa fa-chevron-left" t-on-click="_onPrevPage" t-att-disabled="state.currentPage === 0" aria-label="Anterior"/>
            <span class="px-3">
                Secci√≥n <t t-esc="state.currentPage + 1"/> de <t t-esc="state.sections.length"/>: 
                <strong><t t-esc="state.sections[state.currentPage].name"/></strong>
            </span>
            <button class="btn btn-secondary fa fa-chevron-right" t-on-click="_onNextPage" t-att-disabled="state.currentPage >= state.sections.length - 1" aria-label="Siguiente"/>
        </div>
    </t>

</templates>
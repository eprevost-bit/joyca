<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_project_form_inherit_sale_order" model="ir.ui.view">
            <field name="name">project.project.form.inherit.sale</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_send_so_list_by_email" type="object" string="Enviar Lista por Correo" class="oe_highlight" icon="fa-envelope"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Presupuestos" name="sale_orders">
                        <field name="sale_order_ids" mode="list,form" context="{'default_partner_id': partner_id, 'from_project_form': True}">
                            <list string="Presupuestos" delete="true">
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="date_order"/>
                                <field name="amount_total"/>
                                <field name="state"/>
                            </list>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='sale_orders']/field[@name='sale_order_ids']" position="after">
                    <group class="oe_subtotal_footer oe_right">
                        <span class="oe_form_label">
                            <b>Resumen de Cantidades</b>
                        </span>
                        <div class="oe_clear">
                            <div style="display: flex; justify-content: flex-end; align-items: flex-start; gap: 48px; width: 100%;">
                                <div style="flex-shrink: 0;">

                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Servicio</th>
                                                <th class="text-right">Cantidad</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <label for="x_qty_cajones"/>
                                                </td>
                                                <td class="text-right">
                                                    <field name="x_qty_cajones" nolabel="1"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="x_qty_plataforma"/>
                                                </td>
                                                <td class="text-right">
                                                    <field name="x_qty_plataforma" nolabel="1"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="x_qty_desplazamiento"/>
                                                </td>
                                                <td class="text-right">
                                                    <field name="x_qty_desplazamiento" nolabel="1"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="x_qty_reparto"/>
                                                </td>
                                                <td class="text-right">
                                                    <field name="x_qty_reparto" nolabel="1"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="x_qty_fabricacion"/>
                                                </td>
                                                <td class="text-right">
                                                    <field name="x_qty_fabricacion" nolabel="1"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="x_qty_montaje"/>
                                                </td>
                                                <td class="text-right">
                                                    <field name="x_qty_montaje" nolabel="1"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <group>
                                    <field name="x_total_muestra" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="x_total_barniz" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="x_total_ofitec" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="x_total_repasos" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div style="min-width: 250px;">
                                    <div style="display: flex; justify-content: space-between;">
                                        <label for="total_amount_untaxed" string="Base Imponible Total"/>
                                        <field name="total_amount_untaxed" nolabel="0" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                    <div style="display: flex; justify-content: space-between;">
                                        <label for="total_amount_tax" string="Impuestos Totales"/>
                                        <field name="total_amount_tax" nolabel="0" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                    <div style="display: flex; justify-content: space-between; font-weight: bold; border-top: 1px solid #dee2e6; padding-top: 5px; margin-top: 5px;">
                                        <label for="total_amount_total" string="Total General"/>
                                        <field name="total_amount_total" nolabel="0" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
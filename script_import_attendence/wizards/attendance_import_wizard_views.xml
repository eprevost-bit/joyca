<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="attendance_import_wizard_form_view" model="ir.ui.view">
            <field name="name">attendance.import.wizard.form</field>
            <field name="model">attendance.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Importar Asistencias Excel">
                    <group>
                        <field name="excel_file" filename="excel_filename" />
                        <field name="excel_filename" invisible="1" />
                        <field name="overwrite_existing" />
                    </group>
                    <footer>
                        <button name="action_import_attendance" string="Importar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_attendance_import_wizard" model="ir.actions.act_window">
            <field name="name">Importar Asistencias desde Excel</field>
            <field name="res_model">attendance.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field> </record>

        <menuitem
            id="menu_attendance_import_excel"
            name="Importar Asistencias (Excel)"
            parent="hr_attendance.menu_hr_attendance_root" action="action_attendance_import_wizard"
            sequence="100" /> </data>
</odoo>
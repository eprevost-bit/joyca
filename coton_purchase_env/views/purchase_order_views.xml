<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_custom_buttons" model="ir.ui.view">
            <field name="name">purchase.order.form.custom.buttons</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_rfq_send']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="action_send_items_by_email"
                            type="object"
                            string="Enviar Partidas por Correo"
                            class="oe_highlight"
                    />
                </xpath>

<!--                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="before">-->
<!--                    <field name="is_selected_for_email" nolabel="1"/>-->
<!--                </xpath>-->

            </field>
        </record>
    </data>
</odoo>
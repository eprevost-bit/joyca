<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_custom_states" model="ir.ui.view">
            <field name="name">sale.order.form.custom.states</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">


                <xpath expr="//notebook" position="attributes">
                    <attribute name="readonly">custom_state == 'confirmed'</attribute>
                </xpath>

               <xpath expr="//field[@name='validity_date']" position="before">
                    <button name="action_update_purchase_orders"
                            string="Actualizar"
                            type="object"
                            class="oe_highlight"
                            help="Sincroniza las líneas de venta con las órdenes de compra. Elimina, añade o actualiza las líneas de compra según los cambios en la venta."/>
                </xpath>


                <xpath expr="//div[@name='button_box']" position="inside">

                    <button class="oe_stat_button" type="object" name="action_view_purchase_orders"
                            icon="fa-shopping-cart"
                            invisible="[('purchase_order_count', '=', 0)]">

                        <field name="purchase_order_count" widget="statinfo" string="Compras"/>
                    </button>

                    <button name="action_view_projects" type="object" class="oe_stat_button" icon="fa-tasks"
                    >
                        <field name="project_count" widget="statinfo" string="Proyectos"/>
                    </button>

                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="action_waiting_purchase" string="Generar Presupuestos de Compra" type="object"
                            class="btn-primary" invisible="custom_state != 'draft'"/>
                    <button name="action_reset_to_draft" string="Regresar a Borrador" type="object"
                            groups="sales_team.group_sale_manager"
                            invisible="custom_state not in ('sent', 'confirmed')"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="after">
                    <field name="custom_state" widget="statusbar"
                           statusbar_visible="draft,waiting_purchase,ready,sent,confirmed"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='tax_totals']" position="after">
                    <div class="d-flex justify-content-between">
                        <field name="total_margin_label" nolabel="1" class="fw-bold"/>
                        <div>
                            <field name="total_margin" class="oe_subtotal_footer_separator" nolabel="1" readonly="1"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

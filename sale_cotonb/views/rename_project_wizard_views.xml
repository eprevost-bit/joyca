<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rename_project_wizard_form" model="ir.ui.view">
        <field name="name">rename.project.wizard.form</field>
        <field name="model">rename.project.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="project_id" invisible="1"/>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="action_confirm_project_name" string="Confirmar Nombre" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
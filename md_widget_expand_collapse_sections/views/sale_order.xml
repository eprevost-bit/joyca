<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form_inherit123" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit123</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']" position="attributes">
                <attribute name="widget">section_and_note_one2many_expand</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_inherit_fanatics12" model="ir.ui.view">
        <field name="name">sale.order.form.fanatics</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="validity_date" position="before">
                <field name="print_folded" widget="boolean_toggle"/>
                <field name="allow_detail_view" widget="boolean_toggle"/>
            </field>
        </field>
    </record>


</odoo>
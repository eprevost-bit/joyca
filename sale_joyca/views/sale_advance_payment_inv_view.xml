<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_advance_payment_inv_inherit_concept" model="ir.ui.view">
        <field name="name">sale.advance.payment.inv.inherit.concept</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='down_payment_specification']" position="inside">
                <field name="downpayment_concept_id"
                    invisible="advance_payment_method not in ('fixed', 'percentage')"
                    required="advance_payment_method in ('fixed', 'percentage')"/>
            </xpath>
        </field>
    </record>

</odoo>
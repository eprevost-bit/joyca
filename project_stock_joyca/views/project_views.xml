<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_project_stock_moves" model="ir.actions.act_window">
            <field name="name">Materiales Utilizados</field>
            <field name="res_model">stock.move</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('picking_id.project_id', '=', active_id)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay movimientos de stock asociados a este proyecto.
                </p>
            </field>
        </record>

        <record id="view_project_form_inherit_materials" model="ir.ui.view">
            <field name="name">project.project.form.inherit.materials</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button class="oe_stat_button"
                            name="%(action_project_stock_moves)d"
                            type="action"
                            icon="fa-cubes"> <field name="stock_move_count" widget="statinfo" string="Materiales Utilizados"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>